<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de texto personalizados usando fontes do sistema -->
    <style name="AppTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <!-- Estilo para títulos -->
    <style name="AppTextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para subtítulos -->
    <style name="AppTextStyle.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    
    <!-- Estilo para corpo de texto -->
    <style name="AppTextStyle.Body">
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para botões -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
    
    <!-- Estilo para cards -->
    <style name="AppCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
